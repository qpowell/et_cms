<%= semantic_form_for @user, :url => "/admin/user", :method => :post do |f| %>
    <%= f.input :email %>

    <%= f.actions do %>
        <%= f.action :submit, :as => :button, :button_html => {:class => "btn btn-success"} %>
        <%= f.action :cancel, :as => :link, :button_html => {:class => "btn btn-warning"} %>
    <% end %>
<% end %>